rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Card images - users can only access their own images
    match /cards/{userId}/{allPaths=**} {
      // Allow read for authenticated users (for sharing decks in future)
      allow read: if request.auth != null;

      // Allow write only for the owner
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024  // Max 10MB
                   && request.resource.contentType.matches('image/.*');

      // Allow delete only for the owner
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
